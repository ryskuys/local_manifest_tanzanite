<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <remote name="ryskuys"
            fetch="https://github.com/ryskuys/" />

    <remote name="TogoFire"
            fetch="https://github.com/TogoFire" />

    <remote name="xiaomi-mediatek-devs"
            fetch="https://github.com/xiaomi-mediatek-devs" />

    <remote name="LineageOS"
            fetch="https://github.com/LineageOS" />


    <!-- Device, kernel, vendor lo -->
    <project path="device/xiaomi/tanzanite"
             name="android_device_xiaomi_tanzanite"
             remote="ryskuys"
             revision="lineage-21.0" />

    <project path="kernel/xiaomi/tanzanite"
             name="kernel_xiaomi_tanzanite_prebuilt"
             remote="ryskuys"
             revision="lineage-21.0" />

    <project path="vendor/xiaomi/tanzanite"
             name="proprietary_vendor_xiaomi_tanzanite"
             remote="ryskuys"
             revision="lineage-21.0" />

    <!-- MTK sepolicy dari LOS -->
    <project path="device/mediatek/sepolicy_vndr"
             name="android_device_mediatek_sepolicy_vndr"
             remote="LineageOS"
             revision="lineage-21.0" />

    <!-- Hardware ga punya 21.0 jadi fallback -->
    <project path="hardware/xiaomi"
             name="android_hardware_xiaomi"
             remote="ryskuys"
             revision="lineage-21" />

    <project path="hardware/mediatek"
             name="android_hardware_mediatek"
             remote="ryskuys"
             revision="lineage-21" />

    <!-- Extra apps -->
    <project path="packages/apps/ViPER4AndroidFX"
             name="packages_apps_ViPER4AndroidFX"
             remote="TogoFire"
             revision="v4a" />

</manifest>

